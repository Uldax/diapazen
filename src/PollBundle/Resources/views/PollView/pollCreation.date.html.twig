{% extends 'PollBundle:PollView:pollCreation_template.html.twig' %}
{% block choices %}
    <div id="choices">
        <div class="choice">
            <label for="choix1" class="text lbl_choice datepick">Date limite 1<span
                        class="asterisc"> *</span></label>
            <input required="required" class="text_edit input_choice datepicker" id="choix1" name="choices[]"
                   value="" readonly="true"/>
        </div>

        <div class="choice">
            <label for="choix2" class="text lbl_choice datepick">Date limite 2<span
                        class="asterisc"> *</span></label>
            <input required="required" class="text_edit input_choice datepicker" id="choix2" name="choices[]"
                   value="" readonly="true"/>

        </div>
    </div>

    <div id="add_choice" class="choice">
        <input class="text_edit input_choice form-control add_choix" id="choix3" type="text" name="choices[]"
               disabled="true" placeholder="Ajouter un choix"/>
