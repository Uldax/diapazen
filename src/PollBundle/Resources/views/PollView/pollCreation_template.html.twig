{#{% include 'PollBundle:Default:ariadneThread.html.twig' %}#}
{% extends 'PollBundle::layout.html.twig' %}
	{% block body %}
        <div id="content" class="hidden-xs">
            {% include 'PollBundle:Base:breadcrumb.html.twig' %}

            {# remplacement du type d'input  #}
            <form onsubmit="return formCheck(this);" id="poll_creation_form" class="default_form" action="connection"
                  method="post">
                <h1 class="small_title">Votre sondage de type {{ nametype }}</h1>
                <input name="type" type="hidden" value="c2">
                <label for="id_title_input" class="text">Titre<span class="asterisc"> *</span></label>
                <input class="text_edit form-control" id="id_title_input" name="title_input" type="text" value=""
                       required="required">
                <label for="datepicker" class="text">Date limite</label>
                <input class="text_edit datepicker" name="date_input" id="datepicker" readonly="true"/>
                <label for="id_description_input" class="text lbl_textarea">Description<span class="asterisc"> *</span></label>
                <textarea required="required" class="small_text_edit form-control" id="id_description_input"
                          maxlength="1000" placeholder="1000 carac. maximum." name="description_input"></textarea>

                <h1 class="small_title">Propositions de {{ nametype }}</h1>
                {% block choices %}
                {% endblock %}
            </form>
        </div>

        {# Vue mobile #}
        {% include 'PollBundle:PollView:Mobile/pollCreation_templateMobile.html.twig' with {choices_mobile: block('choices_mobile')} %}

        {% block javascripts %}
            {{ parent() }}
            <script src={{ asset('js/sondage_date.js') }}></script>
        {% endblock %}
    {% endblock %}  
  

