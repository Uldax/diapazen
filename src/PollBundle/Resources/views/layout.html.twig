<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{% block title %}{{ title }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('assets/vendor/aristo/css/Aristo/Aristo.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('css/diapazen.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css"
              media="all"/>
        <link rel="stylesheet" href="{{ asset('css/orangeSoberKit.css') }}" type="text/css" media="all"/>
        <link rel="icon" href="{{ asset('media/pictures/favicon.ico') }}" type="image/x-icon"/>
    {% endblock %}
</head>
<body>

<header>
    <div id="header_content row">
        <div class="col-lg-3 col-md-1"></div>
        <div class="col-lg-4 col-md-6 col-sm-5 col-xs-8 div_connect">
            <a href="{{ path('poll_index') }}">
                <img id="logo" src="{{ asset('media/pictures/diapazen_v2.png') }}" alt="Diapazen" class="img-rounded">
            </a>
        </div>

        <div class="col-lg-4 col-md-5 col-sm-7 col-xs-4 div_connect">
            {% if is_granted('ROLE_USER') %}
            <div id="connected_box">
                <p class="text">Bonjour <a class="orangelink" href="{{ path('poll_dashboard') }}">
                        <span class="orange_text">{{ app.user.username }}</span></a>
                </p>
                <a class="link" href="{{ path('fos_user_security_logout') }}">Se déconnecter</a>
            </div>

            {% else %}

            <div id="connect_box">

                {% if error is defined %}
                    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endif %}
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-inline">
                    <!-- _CSRF du fos user bundle contenu en variable global twig , sécurité des formulaires ) -->
                    <input type="hidden" name="_csrf_token"
                           value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}"/>
                    <input class="small_text_edit form-control hidden-xs" placeholder="E-mail" type="text" id="username"
                           name="_username" value="" required="required"/>
                    <input type="password" class="small_text_edit form-control hidden-xs" id="password" name="_password"
                           required="required"/>
                    <input type="submit" class="btn btn-default orange_small_button hidden-xs" id="_submit"
                           name="_submit" value="Connexion"/>
                </form>


                <button class="btn btn-default orange_small_button orange_small_button-xs visible-xs"
                        data-toggle="modal" data-target="#myModal">
                    Connexion
                </button>

                <div class="api hidden-xs">
                    <!-- Connexion via les Api -->
                    {% block hwi_oauth_content %}
                        {% set idImg=1 %}
                        {% if error is defined %}
                            <span>{{ error }}</span>
                        {% endif %}
                        {% for owner in hwi_oauth_resource_owners() %}
                            <a href="{{ hwi_oauth_login_url(owner) }}"><img id="logo"
                                                                            src="{{ asset('media/pictures/logo'~idImg~'.png') }}"
                                                                            class="img-rounded"></a>
                            {% set idImg=idImg+1 %}
                        {% endfor %}
                    {% endblock hwi_oauth_content %}
                </div>
            </div>
            <a class="btn btn-link small_link hidden-xs" href="{{ path('poll_forgot') }}">Mot de passe oublié ?</a>

        </div>
        <div class="col-lg-1"></div>
        {% endif %}

    </div>
</header>
{% block body %}
{% endblock %}
<!--<div class="white_bg">-->
{% block javascripts %}
    <!-- Création des input date en jquerry necessaire pour tout les sondages -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <!--Inutilisé il me semble  -->
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.js') }}" type="text/javascript"></script>
    <script src={{ asset('js/jquery-ui-1.10.3.custom.js') }}></script>
    <script>datepickerLoader();</script>
{% endblock %}


{% block footer %}
    <footer class="hidden-xs">
        <ul>
            <li><a class="btn btn-link btn-lg link" href="{{ path('poll_index') }}">Accueil</a></li>
            <li><a class="btn btn-link btn-lg link" href="{{ path('poll_about') }}">À propos</a></li>
        </ul>
        <p class="text">© {{ year }} Diapazen</p>
        <img id="logo_isen" src="{{ asset('media/pictures/logo_isen.png') }}" class="img-rounded">
    </footer>

    <!-- Footer mobile -->
    <footer class="visible-xs footer-xs">
        <ul>
            <li><a class="btn btn-link btn-lg link" href="{{ path('poll_index') }}">Accueil</a></li>
            <li><a class="btn btn-link btn-lg link" href="{{ path('poll_about') }}">À propos</a></li>
            <!-- <li><a class="link" href="#">Contact</a></li> -->
        </ul>
        <p class="text">© {{ year }} Diapazen</p>
        <img id="logo_isen" src="{{ asset('media/pictures/logo_isen.png') }}">

    </footer>
{% endblock %}

</body>

</html>