{% block body %}
	<div id="content" class="hidden-xs">
		<div id ="poll">
			<div id="back_button_dashboard">
                            <a class="btn btn-default orange_small_button" href="{{ path('bdls_projet_index') }}" >Retour</a>
			</div>
			<div id="poll_title_box" >
