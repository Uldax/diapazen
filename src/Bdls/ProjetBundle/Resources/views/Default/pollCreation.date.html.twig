{#{% include 'BdlsProjetBundle:Default:ariadneThread.html.twig' %}#}
{% extends 'BdlsProjetBundle:Default:layout.html.twig' %}
	{% block body %}
	<div id="content" class="hidden-xs">
		<div id="ariadne_thread"> 
		<span class="orange_ariadne" ><span></span><span>Création</span><span></span></span>
		{#{% if show_ariadne is defined %}
			{% if show_ariadne == true %}#}
			<span class="grey_ariadne" ><span></span><span>Connexion</span><span></span></span>
			{#{% endif %}
		{% endif %}#}
		<span class="grey_ariadne" ><span></span><span>Partage</span><span></span></span>
		</div>
	
		
		
		{# remplacement du type d'input  #}
		<form onsubmit="return formCheck(this);" id="poll_creation_form" class="default_form" action="connection" method="post">
			<h1 class="small_title">Votre sondage de type {{ nametype }}</h1>
			<input name="type" type="hidden" value="c2">
			<label for="id_title_input" class="text">Titre<span class="asterisc"> *</span></label>
			<input class="text_edit form-control" id="id_title_input" name="title_input" type="text" value="">
			<label for="datepicker" class="text">Date limite</label>
			<input class="text_edit datepicker" name="date_input" id="datepicker" readonly="true"/>
			<label for="id_description_input" class="text lbl_textarea">Description<span class="asterisc"> *</span></label>
			<textarea class="small_text_edit form-control" id="id_description_input" maxlength="1000" placeholder="1000 carac. maximum." name="description_input"></textarea>
                        
			<h1 class="small_title">Propositions de {{ nametype }}</h1>
			<div id="choices">
				<div class="choice">
					<label for="choix1" class="text lbl_choice datepick">Date limite 1<span class="asterisc"> *</span></label>
					<input class="text_edit input_choice datepicker" id="choix1"  name="choices[]" value=""  readonly="true" />
				</div>
                                
				<div class="choice">
					<label for="choix2" class="text lbl_choice datepick">Date limite 2<span class="asterisc"> *</span></label>
					<input class="text_edit input_choice datepicker" id="choix2"  name="choices[]" value=""  readonly="true" />           
					<a class="btn btn-default grey_button" title="Supprimer" type="button" onclick="manageChoices(this);">x</a>
				</div>
                                
				<div class="choice">
					<label for="choix3" class="text lbl_choice datepick">Date limite 3<span class="asterisc"> *</span></label>
					<input class="text_edit input_choice datepicker" id="choix3"  name="choices[]" value=""  readonly="true" />                                    
					<a class="btn btn-default grey_button" title="Supprimer" type="button" onclick="manageChoices(this);">x</a>
				</div>
			</div>
                        
                        <div class="choice">
					<input class="text_edit input_choice form-control add_choix" id="choix3" type="text" name="choices[]" disabled="true" placeholder="Ajouter un choix" />
					<a class="btn btn-default orange_button add_choice_button" title="Ajouter un champ" id="add_choice_button" type="button" onclick="manageChoices(this);">+</a>
                        </div>
                        
			<input class="btn btn-default orange_button next_step" type="submit" value="Étape suivante" />
		</form>
	</div>

        <!-- Version Mobile -->
        <div id="content_mobile" class="visible-xs">
                <div id="ariadne_thread_mobile"> 
		<span class="orange_ariadne orange_ariadne-xs" ><span></span><span>Création</span><span></span></span>
		{#{% if show_ariadne is defined %}
			{% if show_ariadne == true %}#}
			<span class="grey_ariadne grey_ariadne-xs" ><span></span><span>Connexion</span><span></span></span>
			{#{% endif %}
		{% endif %}#}
		<span class="grey_ariadne grey_ariadne-xs" ><span></span><span>Partage</span><span></span></span>
		</div>
	
		
		
		{# remplacement du type d'input  #}
		<form onsubmit="return formCheck(this);" id="poll_creation_form" class="default_form default_form-xs" action="connection" method="post">
			<h1 class="small_title">Votre sondage de type {{ nametype }}</h1>
			<label for="id_title_input" class="text">Titre<span class="asterisc"> *</span></label>
			<input class="text_edit" id="id_title_input" name="title_input" type="text" value="">
			<label for="datepicker" class="text">Date limite</label>
			<input class="text_edit datepicker datepicker-xs" name="date_input" id="datepicker" readonly="true"/>
			<label for="id_description_input" class="text lbl_textarea">Description<span class="asterisc"> *</span></label>
			<textarea class="small_text_edit" id="id_description_input" maxlength="1000" placeholder="1000 carac. maximum." name="description_input"></textarea>
			<h1 class="small_title">Propositions de {{ nametype }}</h1>
			<div id="choices">
				<div class="choice choice-xs">
					<label for="choix1" class="text lbl_choice datepick">Date limite 1<span class="asterisc"> *</span></label>
					<input class="text_edit input_choice datepicker date-xs" required="required" id="choix1_mobile"  name="choices[]" value=""  readonly="true" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])/>
                                        <a class="btn btn-default grey_button" title="Supprimer" type="button" onclick="manageChoices(this);">x</a>
				</div>
				<div class="choice choice-xs">
					<label for="choix2" class="text lbl_choice datepick">Date limite 2<span class="asterisc"> *</span></label>
					<input class="text_edit input_choice datepicker date-xs" required="required" id="choix2_mobile"  name="choices[]" value="" readonly="true" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])"/>           
					<a class="btn btn-default grey_button" title="Supprimer" type="button" onclick="manageChoices(this);">x</a>
				</div>
				<div class="choice choice-xs">
					<label for="choix3" class="text lbl_choice datepick">Date limite 3<span class="asterisc"> *</span></label>
					<input class="text_edit input_choice datepicker date-xs" required="required" id="choix3_mobile"  name="choices[]" value=""  readonly="true" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])/>                                    
					<a class="btn btn-default grey_button" title="Supprimer" type="button" onclick="manageChoices(this);">x</a>
				</div>
			</div>
			<input class="btn btn-default orange_button next_step-xs" type="submit" value="Étape suivante" />
			<a class="btn btn-default orange_button add_choice_button" title="Ajouter un champ" id="add_choice_button" type="button" onclick="manageChoices(this,'{{ type }}');">+</a>
		</form>
	</div>
  
    <script src={{ asset('bundles/projet/js/sondage_date.js') }}> </script>
    {% endblock %}  
  

