<!DOCTYPE html>
<html>
    <head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}{{ title }}{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/style.css') }}" type="text/css" media="all" />
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/Aristo.css') }}" type="text/css" media="all" />
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/diapazen.css') }}" type="text/css" media="all" />
                        <link rel="stylesheet" href="{{ asset('bundles/projet/css/bootstrap.min.css') }}" type="text/css" media="all" />
                        <link rel="stylesheet" href="{{ asset('bundles/projet/css/bootstrap.css') }}" type="text/css" media="all" />
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/orangeSoberKit.css') }}" type="text/css" media="all" />
			<link rel="icon" href="{{ asset('bundles/projet/media/pictures/favicon.ico') }}" type="image/x-icon" />
		{% endblock %}
	</head>
    <body>

		<header>
                    <div id="header_content row">
                        <div class="col-lg-3 col-md-1"></div>
                        <div class="col-lg-4 col-md-6 col-sm-5 col-xs-8 div_connect">
                            <a href="{{ path('bdls_projet_index') }}">
                            <img id="logo" src="{{ asset('bundles/projet/media/pictures/diapazen_v2.png') }}" alt="Diapazen" class="img-rounded">
                            </a>
                        </div>

              
                         <div class="col-lg-4 col-md-5 col-sm-7 col-xs-4 div_connect">
							 {% if is_granted('ROLE_USER') %}
								<div id="connected_box" ><p class="text" >Bonjour <a class="orangelink" href="{{ path('bdls_projet_dashboard') }}"><span class="orange_text">{{ app.user.username }}</span></a></p><a class="link" href="{{ path('fos_user_security_logout') }}">Se déconnecter</a></div>
			{#					<div><p class="text" >Bonjour</p></div>#}
								{% else %}
                                <div id="connect_box" >
                                    
                                    
                                    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-inline">
                                    <!-- _CSRF du fos user bundle contenu en variable global twig , sécurité des formulaires ) -->
                                    <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />

                                   
                                    <input  class="small_text_edit form-control hidden-xs" placeholder="E-mail"  type="text" id="username" name="_username" value="" required="required" />                        
                                    <input type="password" class="small_text_edit form-control hidden-xs"  id="password" name="_password" required="required" />

                             
                                    <input type="submit" class="btn btn-default orange_small_button hidden-xs"  id="_submit" name="_submit" value="Connexion" />                                               
                                    </form>
                                    
                                   <!-- Connexion via les Api -->
                                   {% block hwi_oauth_content %}
                                        {% if error is defined %}
                                            <span>{{ error }}</span>
                                        {% endif %}
                                        {% for owner in hwi_oauth_resource_owners() %}
                                        <a href="{{ hwi_oauth_login_url(owner) }}">{{ owner | trans({}, 'HWIOAuthBundle') }}</a> <br />
                                        {% endfor %}
                                    {% endblock hwi_oauth_content %}
                                    
                                    
                                    
                                   <form action="{{ path('fos_user_security_login') }}" method="post" class="form-inline">
											<input type="text" id="username" class="small_text_edit form-control hidden-xs" placeholder="E-mail" name="_username" />
											<input type="password" class="small_text_edit form-control hidden-xs" id="password" placeholder="Mot de passe" name="_password" />
                                           <input type="hidden" name="_target_path" value="{{ app.request.schemeAndHttpHost~path(app.request.attributes.get('_route')) }}" />
                                            <input class="btn btn-default orange_small_button hidden-xs" type="submit" value="Connexion">
                                            <input class="btn btn-default orange_small_button orange_small_button-xs visible-xs" type="submit" value="Connexion">
                                    </form>
                                </div>
                                <a class="btn btn-link small_link hidden-xs" href="{{ path('bdls_projet_forgot') }}" >Mot de passe oublié ?</a> 
                         </div>
                         <div class="col-lg-1"></div>
                       {% endif %}
				
                    </div>
		</header>
		{% block body %}
		{% endblock %}
		<!--<div class="white_bg">-->
		{% block javascripts %}
                    <!-- Création des input date en jquerry necessaire pour tout les sondages -->
                    <script src="{{ asset('bundles/projet/js/jquery.js') }}" type="text/javascript"></script>
                    <script src="{{ asset('bundles/projet/js/jquery-2.0.2.js') }}" type="text/javascript"></script>
                    <!--Inutilisé il me semble  -->
                     <script src="{{ asset('bundles/projet/js/bootstrap.js') }}" type="text/javascript"></script>
                    <script src={{ asset('bundles/projet/js/jquery-ui-1.10.3.custom.js')}}></script>
                    <script>datepickerLoader();</script>
               {% endblock %}

    
	{% block footer %}
		<footer class="hidden-xs">
		    <ul>
		        <li><a class="btn btn-link btn-lg link" href="{{ path('bdls_projet_index') }}">Accueil</a></li>
				<li><a class="btn btn-link btn-lg link" href="{{ path('bdls_projet_about') }}">À propos</a></li>
		        <!-- <li><a class="link" href="#">Contact</a></li> -->
		    </ul>
		    <p class="text">© {{ year }} Diapazen</p>
		    <img id="logo_isen" src="{{ asset('bundles/projet/media/pictures/logo_isen.png') }}" class="img-rounded">
		</footer>
                        
                <!-- Footer mobile -->        
                <footer class="visible-xs footer-xs">
		    <ul>
		        <li><a class="btn btn-link btn-lg link" href="{{ path('bdls_projet_index') }}">Accueil</a></li>
				<li><a class="btn btn-link btn-lg link" href="{{ path('bdls_projet_about') }}">À propos</a></li>
		        <!-- <li><a class="link" href="#">Contact</a></li> -->
		    </ul>
		    <p class="text">© {{ year }} Diapazen</p>
		    <img id="logo_isen" src="{{ asset('bundles/projet/media/pictures/logo_isen.png') }}">

		</footer>
		{% endblock %}
		
    </body>

</html>