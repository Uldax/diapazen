<!DOCTYPE html>
<html>
    <head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}{{ title }}{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/style.css') }}" type="text/css" media="all" />
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/Aristo.css') }}" type="text/css" media="all" />
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/diapazen.css') }}" type="text/css" media="all" />
			<link rel="stylesheet" href="{{ asset('bundles/projet/css/orangeSoberKit.css') }}" type="text/css" media="all" />
		{% endblock %}
		<!--<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />-->
	</head>
    <body>

		<header>
			<div id="header_content">
				<a href="{{ path('bdls_projet_index') }}">
			    	<img id="logo" src="{{ asset('bundles/projet/images/pictures/diapazen_v2.png') }}" alt="Diapazen" class="img-rounded">
				</a>
				{% if is_granted('ROLE_USER') %}
					<div id="connected_box" ><p class="text" >Bonjour <a class="orangelink" href="{{ path('bdls_projet_index') }}"><span class="orange_text">{{ app.user.username }}</span></a></p><a class="link" href="{{ path('logout') }}">Se déconnecter</a></div>
{#					<div><p class="text" >Bonjour</p></div>#}
					{% else %}
					<div id="connect_box" >
				    	<form action="{{ path('login_check') }}" method="post">
{#				        	<input id="mail_connect" name="email" class="small_text_edit" type="mail" placeholder="E-mail">#}
							<input type="text" id="username" class="small_text_edit" placeholder="E-mail" name="_username" />
{#				        	<input id="password_connect" name="password" class="small_text_edit" type="password" placeholder="Mot de passe">#}
							<input type="password" class="small_text_edit" id="password" placeholder="Mot de passe" name="_password" />
							{#{% if app.request.attributes.get('_route') == '/home' %}
							<input type="hidden" name="_target_path" value="/home" />
							{% endif %}#}
{#							<input type="hidden" name="_target_path" value="{{ path(app.request.attributes.get('_route')) }}" />#}
							<input type="hidden" name="_target_path" value="{{ app.request.schemeAndHttpHost~path(app.request.attributes.get('_route')) }}" />
				        	<input class ="orange_small_button" type="submit" value="Connexion">
						</form>
						<a class="small_link" href="{{ path('bdls_projet_forgot') }}" >Mot de passe oublié ?</a> 
					</div>
				{% endif %}
				
			</div>
		</header>
		{% block body %}
		{% endblock %}
		<!--<div class="white_bg">-->
		{% block javascripts %}
            <script src="{{ asset('bundles/projet/js/script.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/projet/js/jquery.js') }}" type="text/javascript"></script>
			<script src="{{ asset('bundles/projet/js/jquery-ui-1.10.3.custom.js') }}" type="text/javascript"></script>
			<script>datepickerLoader();</script>
		{% endblock %}
    
	{% block footer %}
		<footer>
		    <ul>
		        <li><a class="link" href="{{ path('bdls_projet_index') }}">Accueil</a></li>
				<li><a class="link" href="{{ path('bdls_projet_about') }}">À propos</a></li>
		        <!-- <li><a class="link" href="#">Contact</a></li> -->
		    </ul>
		    <p class="text">© {{ year }} Diapazen</p>
		    <img id="logo_isen" src="{{ asset('bundles/projet/media/pictures/logo_isen.png') }}">
		</footer>
		{% endblock %}
		{% block javascripts %}
            <script src="{{ asset('bundles/projet/js/script.js') }}" type="text/javascript"></script>
			<script src="{{ asset('bundles/projet/js/jquery-ui-1.10.3.custom.js') }}" type="text/javascript"></script>
		{% endblock %}
    </body>

</html>