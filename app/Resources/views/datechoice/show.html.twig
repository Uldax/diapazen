{% extends 'base.html.twig' %}

{% block body %}
    <h1>DateChoice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dateChoice.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if dateChoice.date %}{{ dateChoice.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('datechoice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('datechoice_edit', { 'id': dateChoice.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
